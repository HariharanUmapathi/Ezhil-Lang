[Unit]
Description=Ezhil Site running via Docker Service
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=WORKDIR_REFER_README
ExecStart=/usr/bin/docker-compose up -d
ExecStop=/usr/bin/docker-compose down
TimeoutStartSec=0
Restart=no

[Install]
WantedBy=multi-user.target